<?xml version="1.0" ?>
<book>
  <section id="drop">
    <xref linkend="make">
      <!-- For some reason the Python XML parser throws up a not well-formed
	   exception on "<3.81" -->
      <bin name="make" excludes="3.80" />
    </xref>
    <build>
      <xref linkend="git-core">
	<bin name="git" />
	<url>drop</url>
      </xref>      
    </build>
    <!-- How to express >=4 when the python XML parser 
	 throws malformed exceptions? -->
    <alternates>
      <alternate>
	<tag>Ubuntu</tag>
	<xref linkend="debhelper">
	  <bin name="dh_builddeb" /> 
	</xref>
	<xref linkend="devscripts">
	  <bin name="debuild" />
	</xref>
      </alternate>
      <alternate>
	<tag>Fedora</tag>
	<xref linkend="rpmdevtools">
	  <bin name="rpmdev-setuptree" /> 
	</xref>  
      </alternate>
    </alternates>
  </section>
</book>
